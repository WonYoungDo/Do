<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.tawny.shop.manager.main.repository.PortalRepository">
 	
 	<select id="selectGoods" resultType="com.tawny.shop.manager.goods.domain.Goods" parameterType="map">
 		SELECT
 			id 
 			, `goodsName`
			, `price`
			, `count`
			, `category`
			, `imagePath`
			, `createdAT`
			, `updatedAT`
		FROM
			`goods`
		ORDER BY
			 createdAT DESC
 	</select>
 
 </mapper>