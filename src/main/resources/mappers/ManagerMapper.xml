<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.tawny.shop.manager.repository.ManagerRepository">
 	
 	<insert id="insertJoin" parameterType="map">
 		INSERT INTO
 			`user`
 		(
			`loginId`
			, `pw`
			, `name`
			, `phoneNumber`
			, `email`
 		)
 		VALUE
 		(
			#{loginId}
			, #{pw}
			, #{name}
			, #{phoneNumber}
			, #{email}
 		)
 	</insert>
 	
 	<select id="isDuplicateId" resultType="int" parameterType="String">
 		SELECT 
 			count(1)
		FROM
			`user`
		WHERE 
			`loginId` = #{loginId}
 	</select>
	
	<select id="getLoginInfo" resultType="com.tawny.shop.manager.domain.Manager" parameterType="map">
 		SELECT 
 			`id`
 			, `loginId`
			, `pw`
			, `name`
			, `phoneNumber`
			, `email`
			, `updatedAT`
			, `createdAT`
		FROM
			`user`
		WHERE 
			`loginId` = #{loginId}
			AND `pw` = #{pw}
 	</select>
 	
 </mapper>